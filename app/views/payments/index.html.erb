<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>

<table>
  <thead>
    <tr>
      <th>Card number</th>
      <th>Card holder name</th>
      <th>Card expiration month</th>
      <th>Card expiration year</th>
      <th>Card cvv</th>
      <th>Card hash</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.card_number %></td>
        <td><%= payment.card_holder_name %></td>
        <td><%= payment.card_expiration_month %></td>
        <td><%= payment.card_expiration_year %></td>
        <td><%= payment.card_cvv %></td>
        <td><%= payment.card_hash %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

